---
/**
 * EndOrnament - A handmade, paper-like SVG illustration
 * placed at the end of the home page.
 * Theme: Minimalist geometric tree of life.
 */
---

<div class="end-ornament" aria-hidden="true">
  <svg
    viewBox="0 0 500 400"
    class="ornament-svg"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g stroke-linecap="round" stroke-linejoin="round" fill="none">
      <!-- GROUND PLANE -->
      <path
        d="M 50 330 C 150 325 350 335 450 330"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"
        opacity="0.8"></path>
      <path
        d="M 20 340 C 180 335 320 345 480 340"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.4"></path>

      <!-- ROOTS -->
      <path
        d="M 250 330 Q 230 360 200 365"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"
        opacity="0.8"></path>
      <path
        d="M 250 330 C 240 370 200 380 210 375"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></path>

      <path
        d="M 250 330 Q 270 360 300 365"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"
        opacity="0.8"></path>
      <path
        d="M 250 330 C 260 370 300 380 290 375"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></path>

      <path
        d="M 250 330 L 250 360 Q 260 370 270 365"
        stroke="var(--color-text-muted)"
        stroke-width="2"
        opacity="0.8"></path>

      <!-- Root cross-hatching (subtle) -->
      <line
        x1="220"
        y1="332"
        x2="230"
        y2="345"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"
        opacity="0.5"></line>
      <line
        x1="230"
        y1="332"
        x2="240"
        y2="345"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"
        opacity="0.5"></line>
      <line
        x1="270"
        y1="332"
        x2="260"
        y2="345"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"
        opacity="0.5"></line>
      <line
        x1="280"
        y1="332"
        x2="270"
        y2="345"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"
        opacity="0.5"></line>

      <!-- TRUNK -->
      <!-- Left trunk line -->
      <path
        d="M 243 330 L 246 160"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>
      <!-- Right trunk line -->
      <path
        d="M 257 330 L 254 160"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>

      <!-- Trunk core geometries (knots) -->
      <ellipse
        cx="250"
        cy="230"
        rx="3"
        ry="12"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></ellipse>
      <path
        d="M 250 270 A 4 15 0 1 0 250 295 A 4 15 0 1 0 250 270"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.5"></path>
      <path
        d="M 250 270 A 2 15 0 1 1 250 295 A 2 15 0 1 1 250 270"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.5"></path>

      <!-- CENTER SPIRE (Straight up) -->
      <line
        x1="250"
        y1="180"
        x2="250"
        y2="60"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></line>
      <polygon
        points="250,45 243,60 257,60"
        stroke="var(--color-primary)"
        stroke-width="1.5"
        fill="none"></polygon>
      <circle
        cx="250"
        cy="40"
        r="1.5"
        stroke="var(--color-primary)"
        fill="none"
        stroke-width="1"></circle>

      <!-- MAIN BRANCHES (Smooth, sweeping curves) -->
      <!-- Left Tier 1 (Lowest) -->
      <path
        d="M 245 220 C 180 200 120 160 100 90"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>
      <!-- Left Tier 2 -->
      <path
        d="M 246 180 C 190 150 140 100 130 90"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <!-- Left Tier 3 (Highest) -->
      <path
        d="M 248 140 C 220 100 190 60 170 50"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>

      <!-- Right Tier 1 (Lowest) -->
      <path
        d="M 255 220 C 320 200 380 160 400 90"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>
      <!-- Right Tier 2 -->
      <path
        d="M 254 180 C 310 150 360 100 370 90"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <!-- Right Tier 3 (Highest) -->
      <path
        d="M 252 140 C 280 100 310 60 330 50"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>

      <!-- GEOMETRIC ORNAMENTS & DROPS -->

      <!-- Left Triangle Node (Tier 1 branch hook) -->
      <circle
        cx="90"
        cy="90"
        r="4"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></circle>
      <circle
        cx="90"
        cy="90"
        r="1"
        stroke="var(--color-text-muted)"
        stroke-width="0.5"></circle>

      <!-- Triangle resting on Tier 1 Left -->
      <polygon
        points="120,70 115,82 125,82"
        stroke="var(--color-primary)"
        stroke-width="1.5"
        fill="none"></polygon>

      <!-- Left hanging ornament (mid branch) -->
      <path
        d="M 120 140 Q 110 140 110 145"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <line
        x1="110"
        y1="145"
        x2="110"
        y2="160"
        stroke="var(--color-primary)"
        stroke-width="1"></line>
      <polygon
        points="110,165 107,160 113,160"
        stroke="var(--color-primary)"
        stroke-width="1"
        fill="var(--color-primary)"></polygon>

      <path
        d="M 135 170 Q 125 170 120 175"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <circle
        cx="120"
        cy="175"
        r="2.5"
        stroke="var(--color-primary)"
        stroke-width="1"></circle>
      <line
        x1="120"
        y1="177.5"
        x2="120"
        y2="190"
        stroke="var(--color-primary)"
        stroke-width="1"></line>

      <!-- Left High node -->
      <line
        x1="170"
        y1="50"
        x2="170"
        y2="75"
        stroke="var(--color-text-muted)"
        stroke-width="1"></line>
      <circle
        cx="170"
        cy="80"
        r="2.5"
        stroke="var(--color-primary)"
        stroke-width="1"></circle>
      <circle
        cx="170"
        cy="80"
        r="0.5"
        stroke="var(--color-primary)"
        stroke-width="0.5"></circle>

      <!-- Floating arcs & lines (Abstract accents) -->
      <path
        d="M 235 60 A 25 25 0 0 0 235 100"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></path>
      <line
        x1="170"
        y1="200"
        x2="140"
        y2="215"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.5"></line>
      <path
        d="M 190 125 Q 210 125 230 135"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></path>

      <!-- Right Triangle Node (Tier 1 branch hook) -->
      <circle
        cx="410"
        cy="90"
        r="4"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></circle>
      <circle
        cx="410"
        cy="90"
        r="1"
        stroke="var(--color-text-muted)"
        stroke-width="0.5"></circle>

      <!-- Triangle resting on Tier 1 Right -->
      <polygon
        points="380,70 375,82 385,82"
        stroke-width="1.5"
        stroke="var(--color-primary)"
        fill="none"></polygon>

      <!-- Right hanging ornament (mid branch) -->
      <path
        d="M 380 140 Q 390 140 390 145"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <line
        x1="390"
        y1="145"
        x2="390"
        y2="160"
        stroke="var(--color-primary)"
        stroke-width="1"></line>
      <polygon
        points="390,165 387,160 393,160"
        stroke="var(--color-primary)"
        stroke-width="1"
        fill="var(--color-primary)"></polygon>

      <path
        d="M 365 170 Q 375 170 380 175"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <circle
        cx="380"
        cy="175"
        r="2.5"
        stroke="var(--color-primary)"
        stroke-width="1"></circle>
      <line
        x1="380"
        y1="177.5"
        x2="380"
        y2="190"
        stroke="var(--color-primary)"
        stroke-width="1"></line>

      <!-- Right High node -->
      <line
        x1="330"
        y1="50"
        x2="330"
        y2="75"
        stroke="var(--color-text-muted)"
        stroke-width="1"></line>
      <circle
        cx="330"
        cy="80"
        r="2.5"
        stroke="var(--color-primary)"
        stroke-width="1"></circle>
      <circle
        cx="330"
        cy="80"
        r="0.5"
        stroke="var(--color-primary)"
        stroke-width="0.5"></circle>

      <!-- Floating arcs & lines (Abstract accents) -->
      <path
        d="M 265 60 A 25 25 0 0 1 265 100"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></path>
      <line
        x1="330"
        y1="200"
        x2="360"
        y2="215"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.5"></line>
      <path
        d="M 310 125 Q 290 125 270 135"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.6"></path>

      <!-- Deep Background Floating Dots (Minimalist stars) -->
      <circle
        cx="260"
        cy="130"
        r="0.8"
        stroke="var(--color-primary)"
        fill="var(--color-primary)"
        stroke-width="0.5"
        opacity="0.8"></circle>
      <circle
        cx="210"
        cy="270"
        r="0.6"
        stroke="var(--color-primary)"
        fill="var(--color-primary)"
        stroke-width="0.5"
        opacity="0.6"></circle>
      <circle
        cx="300"
        cy="250"
        r="0.6"
        stroke="var(--color-primary)"
        fill="var(--color-primary)"
        stroke-width="0.5"
        opacity="0.6"></circle>
      <circle
        cx="150"
        cy="225"
        r="1.2"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        fill="none"
        opacity="0.4"></circle>
      <circle
        cx="350"
        cy="200"
        r="0.8"
        stroke="var(--color-text-muted)"
        stroke-width="0.5"
        fill="none"
        opacity="0.5"></circle>
    </g>
  </svg>
</div>

<style>
  .end-ornament {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: var(--space-y-xl);
    padding: var(--space-8) 0;
    width: 100%;
    opacity: 0.8;
  }

  .ornament-svg {
    width: calc(var(--space-100) * 3);
    max-width: 100%;
    height: auto;
    /* Soft bloom effect for the graphite lines */
    filter: drop-shadow(0px 1px 1px var(--color-bg));
  }

  @media (max-width: 600px) {
    /* @breakpoint-mobile */
    .end-ornament {
      margin-top: var(--space-y-md);
      padding: var(--space-4) 0;
    }

    .ornament-svg {
      width: calc(var(--space-100) * 2.2);
    }
  }
</style>
