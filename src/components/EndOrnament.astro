---
/**
 * EndOrnament - A handmade, paper-like SVG illustration
 * placed at the end of the home page.
 * Theme: A realistic, organic tree drawn in a messy, hand-sketched style.
 */
---

<div class="end-ornament" aria-hidden="true">
  <svg
    viewBox="0 0 500 450"
    class="ornament-svg"
    xmlns="http://www.w3.org/2000/svg"
  >
    <defs>
      <!-- Hand-drawn pencil/ink displacement filter -->
      <filter id="pencil-sketch" x="-10%" y="-10%" width="120%" height="120%">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.06"
          numOctaves="5"
          result="noise"></feTurbulence>
        <feDisplacementMap
          in="SourceGraphic"
          in2="noise"
          scale="3"
          xChannelSelector="R"
          yChannelSelector="G"
          result="displaced"></feDisplacementMap>
      </filter>
    </defs>

    <!-- The entire drawing passes through the sketch filter to roughen the edges -->
    <g
      filter="url(#pencil-sketch)"
      stroke-linecap="round"
      stroke-linejoin="round"
      fill="none"
    >
      <!-- GROUND / SOIL HATCHING -->
      <!-- Horizon line -->
      <path
        d="M 20 400 Q 150 390 250 400 T 480 395"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"
        opacity="0.6"></path>
      <path
        d="M 40 405 Q 180 395 250 405 T 460 390"
        stroke-width="0.8"
        stroke="var(--color-text-muted)"
        opacity="0.4"></path>
      <!-- Messy ground scribbles -->
      <path
        d="M 150 410 L 160 420 M 170 410 L 165 425 M 190 405 L 180 415"
        stroke="var(--color-text-muted)"
        stroke-width="0.5"
        opacity="0.5"></path>
      <path
        d="M 350 405 L 340 415 M 330 408 L 335 425 M 310 402 L 320 412"
        stroke="var(--color-text-muted)"
        stroke-width="0.5"
        opacity="0.5"></path>
      <path
        d="M 220 410 Q 240 420 270 410 Q 290 415 300 408"
        stroke="var(--color-text-muted)"
        stroke-width="0.6"
        opacity="0.5"></path>

      <!-- ROOTS -->
      <path
        d="M 230 400 C 220 415 190 420 170 430"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>
      <path
        d="M 240 400 C 235 420 210 440 200 445"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <path
        d="M 250 400 C 255 425 240 445 250 450"
        stroke="var(--color-text-muted)"
        stroke-width="2.5"></path>
      <path
        d="M 265 400 C 270 425 290 435 300 440"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <path
        d="M 275 400 C 290 410 320 420 340 425"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>

      <!-- TRUNK -->
      <!-- Main trunk outlines -->
      <path
        d="M 230 400 C 240 250 220 180 230 150"
        stroke="var(--color-text-muted)"
        stroke-width="3"></path>
      <path
        d="M 275 400 C 265 250 280 180 270 150"
        stroke="var(--color-text-muted)"
        stroke-width="3"></path>

      <!-- Bark texture lines (overlapping vertical scribbles) -->
      <path
        d="M 240 400 C 245 280 235 200 240 160"
        stroke="var(--color-text-muted)"
        stroke-width="1"
        opacity="0.7"></path>
      <path
        d="M 245 400 C 250 280 245 200 245 160"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"
        opacity="0.6"></path>
      <path
        d="M 255 400 C 255 280 255 200 250 160"
        stroke="var(--color-text-muted)"
        stroke-width="1.2"
        opacity="0.7"></path>
      <path
        d="M 265 400 C 260 280 270 200 260 160"
        stroke="var(--color-text-muted)"
        stroke-width="0.6"
        opacity="0.5"></path>
      <!-- Trunk knots / imperfections -->
      <ellipse
        cx="250"
        cy="300"
        rx="3"
        ry="15"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></ellipse>
      <path
        d="M 247 285 Q 242 300 247 315"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"></path>
      <path
        d="M 253 285 Q 258 300 253 315"
        stroke="var(--color-text-muted)"
        stroke-width="0.8"></path>
      <circle
        cx="240"
        cy="210"
        r="2"
        stroke="var(--color-text-muted)"
        stroke-width="1"></circle>
      <circle
        cx="265"
        cy="350"
        r="1.5"
        stroke="var(--color-text-muted)"
        stroke-width="1"></circle>

      <!-- BRANCHES (Organic, twisting out) -->
      <!-- Lower Left -->
      <path
        d="M 235 280 C 200 260 140 270 100 250"
        stroke="var(--color-text-muted)"
        stroke-width="2.5"></path>
      <path
        d="M 180 265 C 150 230 120 220 90 200"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <path
        d="M 130 260 C 110 280 80 290 60 280"
        stroke="var(--color-text-muted)"
        stroke-width="1"></path>

      <!-- Lower Right -->
      <path
        d="M 265 260 C 300 230 360 250 410 220"
        stroke="var(--color-text-muted)"
        stroke-width="2.5"></path>
      <path
        d="M 320 245 C 340 210 380 190 420 180"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <path
        d="M 360 235 C 370 260 400 270 430 260"
        stroke="var(--color-text-muted)"
        stroke-width="1"></path>

      <!-- Mid Left -->
      <path
        d="M 230 180 C 180 150 120 120 80 80"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>
      <path
        d="M 160 140 C 140 100 100 80 60 50"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>

      <!-- Mid Right -->
      <path
        d="M 270 190 C 310 160 360 130 400 90"
        stroke="var(--color-text-muted)"
        stroke-width="2"></path>
      <path
        d="M 330 150 C 360 110 400 90 440 60"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>

      <!-- Canopy Top -->
      <path
        d="M 240 150 C 220 100 180 60 160 30"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <path
        d="M 260 150 C 280 90 320 50 340 20"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>
      <path
        d="M 250 150 C 240 100 260 50 250 10"
        stroke="var(--color-text-muted)"
        stroke-width="1.5"></path>

      <!-- FOLIAGE (Chaotic, scribbled masses resembling graphite shading) -->
      <!-- Utilizing opacity and varying stroke thickness for depth -->
      <g stroke="var(--color-text-muted)" opacity="0.8">
        <!-- Far Left cluster -->
        <path
          d="M 80 250 Q 60 240 50 260 Q 40 230 70 220 Q 50 210 80 190 Q 100 210 110 190 Q 130 230 100 240"
          stroke-width="1.2"></path>
        <path
          d="M 70 230 Q 55 220 65 240 Q 80 210 90 220"
          stroke-width="0.6"
          opacity="0.6"></path>

        <!-- Mid Left cluster -->
        <path
          d="M 100 120 Q 80 100 60 110 Q 50 80 70 60 Q 90 40 110 60 Q 130 50 140 80 Q 160 100 120 110"
          stroke-width="1.5"></path>
        <path
          d="M 90 90 Q 70 80 80 100 Q 110 60 130 80"
          stroke-width="0.8"
          opacity="0.6"></path>

        <!-- Top Left cluster -->
        <path
          d="M 180 80 Q 160 60 140 70 Q 130 40 150 20 Q 170 0 190 20 Q 210 10 220 40 Q 240 60 200 70"
          stroke-width="1.5"></path>
        <path
          d="M 170 50 Q 150 40 160 60 Q 190 20 210 40"
          stroke-width="0.8"
          opacity="0.6"></path>

        <!-- Top Center cluster -->
        <path
          d="M 250 40 Q 220 30 230 10 Q 250 -10 270 10 Q 280 30 250 40"
          stroke-width="1.5"></path>
        <path d="M 250 20 Q 240 10 260 10" stroke-width="0.8" opacity="0.6"
        ></path>

        <!-- Top Right cluster -->
        <path
          d="M 320 80 Q 300 60 280 70 Q 270 40 290 20 Q 310 0 330 20 Q 350 10 360 40 Q 380 60 340 70"
          stroke-width="1.5"></path>
        <path
          d="M 310 50 Q 290 40 300 60 Q 330 20 350 40"
          stroke-width="0.8"
          opacity="0.6"></path>

        <!-- Mid Right cluster -->
        <path
          d="M 400 120 Q 380 100 360 110 Q 350 80 370 60 Q 390 40 410 60 Q 430 50 440 80 Q 460 100 420 110"
          stroke-width="1.5"></path>
        <path
          d="M 390 90 Q 370 80 380 100 Q 410 60 430 80"
          stroke-width="0.8"
          opacity="0.6"></path>

        <!-- Far Right cluster -->
        <path
          d="M 420 250 Q 400 240 390 260 Q 380 230 410 220 Q 390 210 420 190 Q 440 210 450 190 Q 470 230 440 240"
          stroke-width="1.2"></path>
        <path
          d="M 410 230 Q 395 220 405 240 Q 420 210 430 220"
          stroke-width="0.6"
          opacity="0.6"></path>
      </g>

      <!-- Primary Color Accent Leaves (Falling or blooming) -->
      <g stroke="var(--color-primary)" stroke-width="1.5" fill="none">
        <path d="M 120 100 Q 125 105 120 110 Q 115 105 120 100"></path>
        <path d="M 180 50 Q 185 55 180 60 Q 175 55 180 50"></path>
        <path d="M 280 40 Q 285 45 280 50 Q 275 45 280 40"></path>
        <path d="M 380 100 Q 385 105 380 110 Q 375 105 380 100"></path>
        <path d="M 410 200 Q 415 205 410 210 Q 405 205 410 200"></path>
        <path d="M 90 220 Q 95 225 90 230 Q 85 225 90 220"></path>

        <!-- Falling leaves -->
        <path d="M 150 180 Q 155 185 150 190 Q 145 185 150 180" opacity="0.8"
        ></path>
        <path d="M 300 200 Q 303 203 300 206 Q 297 203 300 200" opacity="0.6"
        ></path>
        <path d="M 340 300 Q 345 305 340 310 Q 335 305 340 300" opacity="0.7"
        ></path>
        <path d="M 190 320 Q 193 323 190 326 Q 187 323 190 320" opacity="0.5"
        ></path>
      </g>
    </g>
  </svg>
</div>

<style>
  .end-ornament {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: var(--space-y-xl);
    padding: var(--space-8) 0;
    width: 100%;
    /* Soften the entire sketch block */
    opacity: 0.85;
  }

  .ornament-svg {
    width: calc(var(--space-100) * 3);
    max-width: 100%;
    height: auto;
    /* Soft environmental bloom */
    filter: drop-shadow(0px 1px 2px var(--color-bg));
  }

  @media (max-width: 600px) {
    /* @breakpoint-mobile */
    .end-ornament {
      margin-top: var(--space-y-md);
      padding: var(--space-4) 0;
    }

    .ornament-svg {
      width: calc(var(--space-100) * 2.5);
    }
  }
</style>
