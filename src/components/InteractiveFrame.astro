---
/**
 * InteractiveFrame.astro
 * A reusable container for interactive blog components.
 * Enforces the "Digital Library" card aesthetic with consistent boundaries.
 */

interface Props {
  class?: string;
  id?: string;
}

const { class: className, id } = Astro.props;
---

<div class:list={["interactive-frame", className]} id={id}>
  <slot />
</div>

<style>
  .interactive-frame {
    background: var(--color-surface);
    border: var(--ui-border);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    margin: var(--space-y-xl) 0;
    box-shadow: var(--ui-shadow);
    position: relative;
    overflow: hidden;
  }

  /* Ensure typography inside resets or inherits correctly if needed */
  /* but generally we want to inherit form prose */
</style>
