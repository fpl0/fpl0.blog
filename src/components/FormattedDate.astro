---
interface Props {
  date: Date;
  className?: string; // Optional class for styling
}

const { date, className } = Astro.props;
---

<time datetime={date.toISOString()} class={className}>
  {
    date.toLocaleDateString("en-US", {
      month: "long",
      day: "numeric",
      year: "numeric",
    })
  }
</time>
