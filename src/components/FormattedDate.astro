---
interface Props {
  date: Date;
  className?: string; // Optional class for styling
  variant?: "default" | "system";
}

const { date, className, variant = "default" } = Astro.props;
const classes = [variant === "system" ? "system-label" : "", className].filter(Boolean).join(" ");
---

<time datetime={date.toISOString()} class={classes}>
  {
    date.toLocaleDateString("en-US", {
      month: "long",
      day: "numeric",
      year: "numeric",
    })
  }
</time>
