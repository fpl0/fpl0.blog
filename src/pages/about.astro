---
/**
 * About Page - Personal introduction and social links
 */

import Link from "../components/Link.astro";
import PageHeader from "../components/PageHeader.astro";
import PersonSchema from "../components/PersonSchema.astro";
import Layout from "../layouts/Layout.astro";
import { getPublishedPosts, getPublishedApps } from "../utils/content";
import "../styles/about.css";

const description = "Engineering lead based in Dublin, endlessly curious.";

const [posts, apps] = await Promise.all([getPublishedPosts(), getPublishedApps()]);
const postCount = posts.length;
const appCount = apps.length;
---

<Layout title="About" description={description}>
  <PersonSchema />
  <PageHeader />

  <main id="main-content" class="about-main">
    <section class="intro">
      <h1 class="greeting">Hello, I'm Filipe.</h1>
      <div class="bio">
        <p class="bio-text">
          I'm an engineering lead based in <strong>Dublin</strong>, and
          endlessly curious.
        </p>
        <p class="bio-text">
          This blog explores my interests, captures my thoughts, and documents
          my learning journey.
        </p>
      </div>
    </section>

    <section class="details">
      <h2 class="section-title">Connect</h2>
      <div class="connect-links">
        <Link
          href="https://github.com/fpl0"
          class="connect-link">GitHub</Link>
        <Link href="mailto:me@fpl0.io" class="connect-link">Email</Link>
      </div>
    </section>

    <section class="details">
      <h2 class="section-title">Explore</h2>
      <p class="explore-counts">{postCount} posts, {appCount} {appCount === 1 ? "app" : "apps"}</p>
      <div class="connect-links">
        <Link href="/" class="connect-link">Feed</Link>
        <Link href="/tags/" class="connect-link">Tags</Link>
        <Link href="/rss.xml" class="connect-link">RSS</Link>
      </div>
    </section>
  </main>
</Layout>
